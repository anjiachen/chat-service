.login-container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f2f5;
}

.login-box {
  width: 90%;
  max-width: 400px;
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #128C7E;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f0f2f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  background: #128C7E !important;
  color: white !important;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
} 