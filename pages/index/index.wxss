/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.game-canvas {
  width: 100%;
  height: 100%;
}

.score {
  position: absolute;
  top: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 48rpx;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.start-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20rpx 40rpx;
  background: #4CAF50;
  color: white;
  border-radius: 10rpx;
  font-size: 36rpx;
}
